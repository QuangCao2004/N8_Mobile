<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:padding="16dp"
    android:background="#B6B6B6"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/imgback"
        android:layout_width="40dp"
        android:layout_height="40dp"


        android:background="@null"
        android:contentDescription="Quay lại"
        android:src="@drawable/ql" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="20dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="303dp"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="15dp"
                android:text="Thêm Danh Mục Sản Phẩm"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ten"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/border_image"
                android:layout_marginTop="0dp"
                android:drawablePadding="8dp"
                android:hint="Tên Danh Mục"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:textColorHint="#aaa" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="81dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgnsp"
                    android:layout_width="159dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/border_image"
                    android:contentDescription="Ảnh danh mục"
                    android:scaleType="centerCrop" />

                <Button
                    android:id="@+id/btnAddImg"
                    android:layout_width="100dp"
                    android:layout_height="61dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#FF6767"
                    android:text="Chọn ảnh"
                    android:textStyle="bold"></Button>
            </LinearLayout>

            <Button
                android:id="@+id/btnadd"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#289700"
                android:text="Thêm"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="20dp" />

            <TextView
                android:id="@+id/id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="1sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

