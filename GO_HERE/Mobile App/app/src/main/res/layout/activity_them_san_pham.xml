<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"

    android:background="#BABABA"
    android:orientation="vertical">
    <ImageButton
        android:id="@+id/imgback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@null"


        android:padding="10dp"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="20dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#FFFFFF"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="THÊM THÔNG TIN SẢN PHẨM"
                android:textSize="20sp"

                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="5dp" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/tensp"
                android:background="@drawable/border_image"
                android:layout_marginBottom="6dp"
                android:drawablePadding="8dp"
                android:hint="Tên sản phẩm"
                android:padding="8dp"
                android:textColorHint="#aaa"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="3dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/dongia"
                android:background="@drawable/border_image"
                android:layout_marginBottom="2dp"
                android:drawablePadding="8dp"
                android:inputType="number"
                android:hint="Đơn giá (VNĐ)"
                android:textColorHint="#aaa"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="0dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/mota"
                android:background="@drawable/border_image"
                android:drawablePadding="8dp"
                android:hint="Mô tả"
                android:padding="8dp"
                android:textColorHint="#aaa"

                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="5dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/ghichu"
                android:background="@drawable/border_image"
                android:drawablePadding="8dp"
                android:hint="Ghi chú"
                android:padding="8dp"
                android:textColorHint="#aaa"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="5dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/soluongkho"
                android:background="@drawable/border_image"
                android:drawablePadding="8dp"
                android:hint="Số lượng kho"
                android:textColorHint="#aaa"
                android:padding="8dp"
                android:inputType="number"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="5dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:text="Danh mục sản phẩm"
                    android:textColor="#aaa"
                    android:textSize="17dp"></TextView>

                <Spinner
                    android:id="@+id/spn"
                    android:layout_width="159dp"
                    android:layout_height="45dp"

                    android:layout_marginLeft="26dp"

                    android:drawablePadding="8dp"
                    android:padding="8dp"

                    android:textColor="@color/black"
                    android:textColorHighlight="@color/cardview_dark_background"
                    android:textColorHint="#aaa" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgsp"
                    android:layout_width="170dp"
                    android:layout_height="60dp"
                    android:background="@drawable/border_image"
                    android:drawablePadding="8dp"
                    android:inputType="textPassword"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/cardview_dark_background" />

                <Button
                    android:layout_width="100dp"
                    android:layout_marginTop="5dp"
                    android:text="Chọn ảnh"
                    android:backgroundTint="#F3D22C"
                    android:layout_marginLeft="50dp"
                    android:id="@+id/btnAddImg"
                    android:layout_height="50dp"></Button>
            </LinearLayout>


            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/btnadd"
                android:text="Thêm"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:layout_marginTop="1dp"
                android:backgroundTint="#289700"
                app:cornerRadius = "20dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>