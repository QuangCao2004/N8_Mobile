<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F6">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/bo"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_alignParentTop="true"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Logo and Title -->
        <LinearLayout
            android:layout_width="393dp"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:paddingBottom="12dp">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="63dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="0dp"
                android:contentDescription="Quang Store Logo"
                android:src="@drawable/logoshop" />

            <TextView
                android:layout_width="278dp"
                android:layout_height="34dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="25dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text="Quang Mobile Store"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Search Bar -->
        <FrameLayout
            android:layout_width="396dp"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/thanhtimkiem"
            card_view:cardCornerRadius="10dp"
            card_view:cardElevation="4dp">

            <EditText
                android:id="@+id/timkiem"
                android:layout_width="374dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="@null"
                android:drawableEnd="@drawable/tk"
                android:drawablePadding="12dp"
                android:hint="Search phones..."
                android:inputType="text"
                android:maxLines="1"
                android:paddingHorizontal="16dp"
                android:textColor="#111827"
                android:textColorHint="#6B7280"
                android:textSize="16sp" />
        </FrameLayout>
    </LinearLayout>

    <!-- Content ScrollView -->
    <ScrollView
        android:id="@+id/contentScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomToolbar"
        android:layout_below="@id/bo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Banner Image -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp"
                android:background="#FFFFFF"
                card_view:cardCornerRadius="16dp"
                card_view:cardElevation="6dp">

                <VideoView
                    android:id="@+id/banner_video"
                    android:layout_width="395dp"
                    android:layout_height="230dp"
                    android:layout_gravity="center"
                    android:contentDescription="Phone Promotion Video" />
            </FrameLayout>

            <!-- Categories Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:fontFamily="sans-serif-medium"
                android:paddingVertical="0dp"
                android:text="Danh Mục"
                android:textColor="#111827"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Recommended Products Section -->

            <GridView
                android:id="@+id/grv2"
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:layout_marginBottom="16dp"
                android:horizontalSpacing="12dp"
                android:numColumns="4"
                android:padding="12dp"
                android:stretchMode="columnWidth"
                android:verticalSpacing="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:fontFamily="sans-serif-medium"
                android:paddingVertical="0dp"
                android:text="Đề xuất sản phẩm"
                android:textColor="#111827"
                android:textSize="18sp"
                android:textStyle="bold" />

            <GridView
                android:id="@+id/grv1"
                android:layout_width="match_parent"
                android:layout_height="207dp"
                android:layout_marginBottom="0dp"
                android:horizontalSpacing="12dp"
                android:numColumns="3"
                android:padding="12dp"
                android:stretchMode="columnWidth"
                android:verticalSpacing="12dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Toolbar -->
    <LinearLayout
        android:id="@+id/bottomToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:padding="12dp"
        card_view:cardElevation="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btntrangchu"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@null"
                android:contentDescription="Trang Chủ"
                android:src="@drawable/tc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trang Chủ"
                android:textColor="@color/nav_item_color"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnnhomsp"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@null"
                android:contentDescription="Danh Mục"
                android:src="@drawable/nhomsp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Danh Mục"
                android:textColor="@color/nav_item_color"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnsanpham"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@null"
                android:contentDescription="Sản Phẩm"
                android:src="@drawable/gh" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sản Phẩm"
                android:textColor="@color/nav_item_color"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btndonhang"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@null"
                android:contentDescription="Đơn Hàng"
                android:src="@drawable/donhang" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đơn Hàng"
                android:textColor="@color/nav_item_color"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btntaikhoan"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@null"
                android:contentDescription="Tài Khoản"
                android:src="@drawable/taikhoan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tài Khoản"
                android:textColor="@color/nav_item_color"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btncanhan"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@null"
                android:contentDescription="Cá Nhân"
                android:src="@drawable/nd" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cá Nhân"
                android:textColor="@color/nav_item_color"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>