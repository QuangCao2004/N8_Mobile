<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/background_dark</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/background_dark</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <!-- Login Button Style -->
    <style name="LoginButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_hover</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:stateListAnimator">@animator/button_elevation</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Social Login Button Style -->
    <style name="SocialButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:background">@drawable/social_button_hover</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="iconTint">@color/text_primary</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- TextInput Style -->
    <style name="CustomTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="hintTextColor">@color/text_secondary</item>
    </style>
</resources>